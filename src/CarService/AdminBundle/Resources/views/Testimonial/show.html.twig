{% extends 'CarServiceAdminBundle::template.html.twig' %}

{% block body -%}
    <h1>Testimonial</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Testimonial</th>
                <td>{{ entity.testimonial }}</td>
            </tr>
            <tr>
                <th>Customername</th>
                <td>{{ entity.customerName }}</td>
            </tr>
            <tr>
                <th>Customeremail</th>
                <td>{{ entity.customerEmail }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_testimonial') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_testimonial_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
